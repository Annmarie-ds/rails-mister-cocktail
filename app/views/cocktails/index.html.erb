<div class="home-container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1434817247550-689f7c23be58?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1706&q=80)">
    <div class="topnav">
      <a class="home active" href="#home">HOME</a>
      <a class="contact" href="#contact">CONTACT</a>
      <a class="about" href="#about">ABOUT</a>
    </div>

    <div class="banner-container">
    <h2>MISTER COCKTAIL</h2>
    </div>
  </div>

  <h3 class="text-center m-3"><b>COCKTAILS</b></h3>
 <div class="card-container">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="home-card">
          <%= cl_image_tag cocktail.photo.key, height: 150, width: 200, crop: :fill %>
          <div class="home-card-container">
            <h6><b><%= cocktail.name %></b></h6>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="link-container">
    <%= link_to new_cocktail_path do %>
    <i class="fas fa-plus p-5"></i>
    <% end %>
  </div>

  <!-- <i class="fas fa-plus"></i> -->

  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
  </div>
</div>
