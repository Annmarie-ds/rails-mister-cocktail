<div class="container">
  <div class="card">
    <%= cl_image_tag @cocktail.photo.key, height: 400, width: 500, crop: :fill %>
    <div class="card-body">
      <h2 class="title"><%= @cocktail.name %></h2>
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %>
            <%= dose.ingredient.name %>
            <%= link_to "Delete", dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
        <% end %>
      </ul>
        <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %> |
        <%= link_to 'Back', cocktails_path %> |
        <%= link_to "Delete #{@cocktail.name}",
                    cocktail_path(@cocktail),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>





