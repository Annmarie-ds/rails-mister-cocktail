<div class="container">
  <div class="row">
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 300, crop: :fill %>
    <div class="cocktail-card">
      <div class="cocktail-body">
        <h2 class="title"><%= @cocktail.name.upcase %></h2>
        <p class="description"><%= @cocktail.description %></p>
        <ul class="list-unstyled">
          <% @cocktail.doses.each do |dose| %>
            <li><%= dose.description %>
              <%= dose.ingredient.name %>
              <%= link_to "Delete", dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></li>
          <% end %>
        </ul>
        <br><br>
        <div class="links">
          <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>
          <%= link_to 'Back', cocktails_path %>
          <%= link_to "Delete #{@cocktail.name}",
                      cocktail_path(@cocktail),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
  </div>
</div>
